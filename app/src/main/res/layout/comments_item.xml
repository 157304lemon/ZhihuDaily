<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E7E7E7"/>

    <ImageView
        android:id="@+id/im_comment_avatar"
        android:layout_below="@id/view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/comment_avatar"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/im_comment_avatar"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/im_comment_avatar"
        android:layout_marginStart="10dp">


        <TextView
            android:id="@+id/tv_comment_author_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="张三"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="#000"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@drawable/comment_vote"
            android:layout_toLeftOf="@id/tv_comment_likes"
            android:layout_marginRight="5dp"
            android:layout_toStartOf="@id/tv_comment_likes"
            android:layout_marginEnd="5dp" />

        <TextView
            android:id="@+id/tv_comment_likes"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="92"
            android:gravity="center_vertical"
            android:drawablePadding="5dp" />

        <TextView
            android:id="@+id/tv_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_comment_author_name"/>

        <TextView
            android:id="@+id/tv_comment_time"
            android:layout_below="@id/tv_comments"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="02-15 08:36"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

</RelativeLayout>