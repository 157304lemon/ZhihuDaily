<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_custom_dialog"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="分享"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:padding="15dp"
                android:orientation="horizontal"
                android:layout_marginStart="5dp">

                <TextView
                    android:id="@+id/tv_share_sina"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/share_sina"
                    android:text="新浪微博"
                    android:drawablePadding="10dp"
                    android:textColor="#A4A5A5"
                    android:gravity="center"
                    tools:ignore="HardcodedText,NestedWeights" />

                <TextView
                    android:id="@+id/tv_share_wechat"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/share_wechat"
                    android:text="微信"
                    android:drawablePadding="10dp"
                    android:textColor="#A4A5A5"
                    android:gravity="center"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_share_frinds"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/share_friends"
                    android:text="微信朋友圈"
                    android:drawablePadding="10dp"
                    android:textColor="#A4A5A5"
                    android:gravity="center"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_share_evernote"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/share_evernote"
                    android:text="印象笔记"
                    android:drawablePadding="10dp"
                    android:textColor="#A4A5A5"
                    android:gravity="center"
                    tools:ignore="HardcodedText,NestedWeights" />

                <TextView
                    android:id="@+id/tv_share_youdao"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/share_youdao"
                    android:text="有道云笔记"
                    android:drawablePadding="10dp"
                    android:textColor="#A4A5A5"
                    android:gravity="center"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_share_qq"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/share_qq"
                    android:text="qq"
                    android:drawablePadding="10dp"
                    android:textColor="#A4A5A5"
                    android:gravity="center"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_share_more"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/share_more"
                    android:text="更多平台"
                    android:drawablePadding="10dp"
                    android:textColor="#A4A5A5"
                    android:gravity="center"
                    tools:ignore="HardcodedText,NestedWeights" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>