<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009DD7">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/im_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back1"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登陆"
                android:layout_gravity="center"
                android:paddingLeft="30dp"
                android:textColor="#ffff"
                android:textSize="21sp"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>
    <!--<include layout="@layout/layout_title_log_in"/>-->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/login_bg">

        <ImageView
            android:layout_width="219dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:src="@drawable/splash_logo" />

        <TextView
            android:id="@+id/tv_mylogin"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="用户名登陆"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_weibo_register"
            tools:ignore="RtlSymmetry"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="10dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:paddingLeft="60dp"/>

        <TextView
            android:id="@+id/tv_sina_login"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="新浪微博"
            android:textSize="20sp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:paddingLeft="60dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/account_sina"
            android:background="@drawable/bg_weibo_register"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/account_sina"
            tools:ignore="RtlSymmetry"
            android:paddingStart="60dp" />

        <TextView
            android:id="@+id/tv_tencent_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="腾讯微博"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/account_tencent"
            android:background="@drawable/bg_weibo_register"
            android:drawablePadding="10dp"
            android:layout_marginTop="20dp"
            android:paddingStart="60dp"
            android:drawableStart="@drawable/account_tencent"
            tools:ignore="RtlSymmetry"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:paddingLeft="60dp"/>

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

    </LinearLayout>


</LinearLayout>