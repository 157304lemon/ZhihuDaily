<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/blue"
    android:padding="10dp">

    <ImageView
        android:id="@+id/im_avatar"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:src="@drawable/base_avatar"/>

    <TextView
        android:id="@+id/tv_header_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请登录"
        android:layout_marginLeft="20dp"
        android:paddingTop="10dp"
        android:textSize="15sp"
        android:textColor="#fff"
        android:layout_toRightOf="@id/im_avatar"
        android:layout_toEndOf="@id/im_avatar"
        android:layout_marginStart="20dp"
        android:background="@drawable/bg_header_signin"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_storage"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/collect"
            android:text="我的收藏"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="15sp"
            android:drawableStart="@drawable/collect" />

        <TextView
            android:id="@+id/tv_download"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/download"
            android:text="我的收藏"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="15sp"
            android:drawableStart="@drawable/download" />



    </LinearLayout>

</RelativeLayout>